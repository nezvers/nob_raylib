  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Rebuild All",
      "type": "cppdbg",
      "request": "launch",
      "windows": {
        "program": "${workspaceFolder}/build/${config:PROJECT_NAME}.exe"
      },
      "linux": {
        "program": "${workspaceFolder}/build/${config:PROJECT_NAME}"
      },
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build all"
    },
    {
      "name": "(gdb) App",
      "type": "cppdbg",
      "request": "launch",
      "windows": {
        "program": "${workspaceFolder}/build/${config:PROJECT_NAME}.exe"
      },
      "linux": {
        "program": "${workspaceFolder}/build/${config:PROJECT_NAME}"
      },
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "re-build"
    },
    {
      "name": "(gdb) Nob",
      "type": "cppdbg",
      "request": "launch",
      "windows": {
        "program": "${workspaceFolder}/nob.exe"
      },
      "linux": {
        "program": "${workspaceFolder}/nob"
      },
      "args": ["debug"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build debug nob"
    }
  ]
}
