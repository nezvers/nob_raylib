// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Debug app",
    "build": {
      "command": "./nob",
      "args": ["-debug", "-name", "nob_raylib"],
      "cwd": "$ZED_WORKTREE_ROOT"
    },
    "program": "$ZED_WORKTREE_ROOT/build/nob_raylib",
    "request": "launch",
    "adapter": "CodeLLDB"
  },
  {
    "label": "Debug nob",
    "build": {
      "command": "gcc",
      "args": ["-o", "nob", "nob.c"],
      "cwd": "$ZED_WORKTREE_ROOT"
    },
    "program": "$ZED_WORKTREE_ROOT/nob",
    "request": "launch",
    "adapter": "CodeLLDB"
  }
]
